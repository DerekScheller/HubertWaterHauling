<UserControl x:Class="HWHCore.CustomControls.QuickSearchSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HWHCore.CustomControls"
             mc:Ignorable="d" d:DataContext="{d:DesignData Source QuickSearchSelect}">
    <StackPanel Width="300">
        <TextBlock Text="{Binding}"/>
        <TextBox x:Name="Filter"/>
        <ListBox Height="150" x:Name="FilteredResources"
                 ItemsSource= "{Binding Path=Items}"
                 SelectedItem="{Binding Path=SelectedItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
        

</UserControl>
